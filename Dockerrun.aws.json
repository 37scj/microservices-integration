{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "nginx",
        "image": "gabrielltr/loadbalance:nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": ["webapp1", "drone1", "producer"],
        "memory": 100
      },
      {
        "name": "webapp1",
        "image": "gabrielltr/icc-react-web-app:latest",
        "hostname": "webapp1",
        "environment": [
          {
            "name": "REACT_APP_API",
            "value": "/api"
          }
        ],
        "essential": false,
        "memory": 300
      },
      {
        "name": "drone1",
        "image": "gabrielltr/dronebackend:latest",
        "hostname": "drone1",
        "environment": [
          { "name": "SPRING_DATASOURCE_USERNAME", "value": "dbuser" },
          { "name": "SPRING_DATASOURCE_PASSWORD", "value": "fiappass" },
          { "name": "SPRING_DATASOURCE_URL", "value": "jdbc:mysql://aa1elm6b310xvk9.ck1ld52tjco7.us-east-1.rds.amazonaws.com:3306/droneDB?serverTimezone=UTC" }
        ],
        "essential": false,
        "memory": 300
      },
      {
        "name": "producer",
        "image": "gabrielltr/droneproducer:latest",
        "hostname": "drone1",
        "environment": [
          { "name": "SPRING_RABBITMQ_HOST", "value": "rabbit" },
          { "name": "SPRING_RABBITMQ_PORT", "value": "5672" },
          { "name": "DRONE_URL_UPDATE", "value": "http://loadbalance:8090/drones/%d" }
        ],
        "essential": false,
        "memory": 300
      }
    ]
}
